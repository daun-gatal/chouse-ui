# ============================================
# CHouse UI Environment Variables
# ============================================
# Copy this file to .env and update with your values
# OR use a YAML configuration file by setting:
#   CHOUSE_CONFIG_PATH=./config.yaml
#
# For production, generate secure secrets using:
#   JWT_SECRET: openssl rand -base64 32
#   RBAC_ENCRYPTION_KEY: openssl rand -hex 32
#   RBAC_ENCRYPTION_SALT: openssl rand -hex 32

# ============================================
# Core Server Settings
# ============================================
PORT=5521
NODE_ENV=development
STATIC_PATH=./dist
CORS_ORIGIN=*
# Server log level: debug | info | warn | error (JSON logs via Pino)
LOG_LEVEL=info

# ============================================
# RBAC Database Configuration
# ============================================
# Database type: 'sqlite' (default) or 'postgres'
RBAC_DB_TYPE=sqlite

# SQLite configuration (used when RBAC_DB_TYPE=sqlite)
RBAC_SQLITE_PATH=./data/rbac.db

# PostgreSQL configuration (used when RBAC_DB_TYPE=postgres)
# Example: postgres://user:password@host:5432/dbname
RBAC_POSTGRES_URL=
RBAC_POSTGRES_POOL_SIZE=10

# ============================================
# JWT Authentication
# ============================================
# JWT signing secret (REQUIRED in production)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars!

# Token expiration times (m: minutes, h: hours, d: days)
JWT_ACCESS_EXPIRY=4h
JWT_REFRESH_EXPIRY=7d

# ============================================
# Encryption
# ============================================
# Encryption key for ClickHouse connection passwords (REQUIRED in production)
# Should be 32 bytes in hex (64 characters)
# Generate with: openssl rand -hex 32
RBAC_ENCRYPTION_KEY=

# Salt for encryption key derivation (REQUIRED in production)
# Should be 32 bytes in hex (64 characters)
# Generate with: openssl rand -hex 32
RBAC_ENCRYPTION_SALT=

# ============================================
# Admin User Seeding
# ============================================
# These are only used when creating the initial admin user during first run
RBAC_ADMIN_EMAIL=admin@localhost
RBAC_ADMIN_USERNAME=admin
RBAC_ADMIN_PASSWORD=admin123!


